<h1>ユーザー一覧</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>名前</th>
      <th>Email</th>
      <th>年齢</th>
      <th>性別</th>
      <th>学校名</th>
      <th>面接日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><div class="text-center"><%= user.username %></div></td>
      <td><div class="text-center"><%= user.email%></div></td>
      <td><div class="text-center"><%= user.age%></div></td>
      <td><div class="text-center"><%= user.sex%></div></td>
      <td><div class="text-center"><%= user.schoolname%></div></td>
      <td><div class="text-center"><%= user.approvaldate %></div></td>
      <td><div class="text-center">
      <%= link_to '面接一覧', user_interviews_path(user), class: "btn btn-primary" %>
      </div></td>
    </tr>
    <% end %>
  </tbody>
</table>